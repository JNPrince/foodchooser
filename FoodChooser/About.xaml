<Window x:Class="FoodChooser.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodChooser"
        mc:Ignorable="d"
        Title="About" Height="250" Width="400">
    <Grid Background="#7c7c7c">
        <TextBlock HorizontalAlignment="Left" Height="61" Margin="27,15,0,0" TextWrapping="Wrap" Text="Food Chooser" VerticalAlignment="Top" Width="281" FontWeight="Bold" FontSize="36" />
        <TextBlock x:Name="versionNumberBox" HorizontalAlignment="Left" Margin="27,59,0,0" TextWrapping="Wrap" Text="{Binding}" VerticalAlignment="Top" Height="25" Width="49" FontSize="16" RenderTransformOrigin="5.035,0.2"/>
        <TextBlock HorizontalAlignment="Left" Margin="27,109,0,0" TextWrapping="Wrap" Text="Written by Jesse Prince" VerticalAlignment="Top" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="27,133,0,0" TextWrapping="Wrap" Text="Scrutinized by Olivander the cat" VerticalAlignment="Top" FontSize="18"/>
    </Grid>
</Window>
